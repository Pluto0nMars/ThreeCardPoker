<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GamePlayController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <BorderPane style="-fx-padding: 5;">


            <left>
                <Pane minWidth="50"/>
            </left>


            <center>
                <Label text="POKER" alignment="CENTER"
                       style="-fx-font-size: 36px;
                          -fx-text-fill: gold;
                          -fx-font-weight: bold;
                          -fx-font-family: 'Lucida Console';" />
            </center>

            <right>
                <ComboBox fx:id="menu"
                          prefWidth="240"
                          promptText="Menu Options (Click â–¼)"/>
            </right>

        </BorderPane>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="30">

            <HBox alignment="CENTER" spacing="20">
                <Pane fx:id="dealerCard1"
                      prefWidth="150"
                      prefHeight="200"
                      style="-fx-background-color: #008000;
                     -fx-border-color: white;
                     -fx-border-style: dashed;
                     -fx-border-width: 3;" />

                <Pane fx:id="dealerCard2"
                      prefWidth="150"
                      prefHeight="200"
                      style="-fx-background-color: #008000;
                     -fx-border-color: white;
                     -fx-border-style: dashed;
                     -fx-border-width: 3;" />

                <Pane fx:id="dealerCard3"
                      prefWidth="150"
                      prefHeight="200"
                      style="-fx-background-color: #008000;
                     -fx-border-color: white;
                     -fx-border-style: dashed;
                     -fx-border-width: 3;" />
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Pane fx:id="playerCard1"
                      prefWidth="150"
                      prefHeight="200"
                      style="-fx-background-color: #008000;
                         -fx-border-color: white;
                         -fx-border-style: dashed;
                         -fx-border-width: 3;"/>

                <Pane fx:id="playerCard2"
                      prefWidth="150"
                      prefHeight="200"
                      style="-fx-background-color: #008000;
                      -fx-border-style: dashed;
                     -fx-border-color: white;
                     -fx-border-width: 3;" />

                <Pane fx:id="playerCard3"
                      prefWidth="150"
                      prefHeight="200"
                      style="-fx-background-color: #008000;
                     -fx-border-color: white;
                     -fx-border-style: dashed;
                     -fx-border-width: 3;" />
            </HBox>
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="drawButton"
                        prefHeight="50"
                        prefWidth="200"
                        text="FOLD"/>

                <Button fx:id="playButton"
                        prefHeight="50"
                        prefWidth="200"
                        text="PLAY"
                        style=" -fx-background-color: #48d1cc;"/>
            </HBox>
        </VBox>
    </center>
    <right>

        <VBox prefWidth="350" alignment="CENTER" style="-fx-padding: 5;">

            <Label text="MESSAGE HISTORY:"
            style="-fx-background-color: transparent;
                    -fx-font-family: 'Lucida Console';
                    -fx-font-size: 24px;"/>
            <ListView fx:id="messageHistory" prefHeight="300"
                      style="-fx-background-color: lightgrey;
                      -fx-border-color: black;
                      -fx-border-width: 2;"/>
        </VBox>
    </right>
    <left>
        <VBox spacing="30" style="-fx-padding: 10;">
            <VBox>
                <Label text="PICK WAGER($):"
                       style="-fx-background-color: transparent;
                      -fx-font-family: 'Lucida Console';
                      -fx-font-size: 24px;"/>

                <ComboBox fx:id="wagerList" prefWidth="200"
                          style="-fx-background-color: lightgrey;
                          -fx-font-size: 16px;
                          -fx-border-color: black;
                          -fx-border-width: 2;"
                          promptText="wager $(5-25)"/>
            </VBox>

            <HBox alignment="CENTER">
                <Label fx:id="winnings" text="WINNINGS: $0"
                       style="-fx-font-size: 20px;"/>
            </HBox>

        </VBox>

    </left>







</BorderPane>
