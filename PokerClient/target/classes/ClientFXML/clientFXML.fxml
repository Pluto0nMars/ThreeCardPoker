<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="root"
            fx:controller="ClientController"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox>
            <Label text="POKER"/>
            <HBox>

                <TextField fx:id ="ipTextField"
                           promptText="Enter IP Address"
                           prefWidth="220"
                />
                <TextField fx:id ="portTextField"
                           promptText="Enter Port Number"
                           prefWidth="220"
                />
            </HBox>
            <Button fx:id="joinButton"
                    text="JOIN"
                    onAction="#joinMethod"
            />
        </VBox>

    </center>

</BorderPane>
