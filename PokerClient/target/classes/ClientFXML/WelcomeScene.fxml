<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="WelcomeRoot"
            fx:controller="WelcomeController"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" spacing="35">
            <Label text="WELCOME TO POKER!" style="-fx-font-size: 50px;
                                        -fx-font-family: 'Constantia';
                                        -fx-text-fill: #ffffe0;
                                        -fx-font-weight: bold;"/>
            <HBox alignment="CENTER" spacing="20">

                <TextField fx:id ="wagerField"
                           promptText="Enter Wager"
                           prefWidth="220"
                           prefHeight="30"
                />
            </HBox>
            <Button fx:id="playButton"
                    text="PLAY"
                    onAction="#playGameMethod"
                    prefHeight="50"
                    prefWidth="200"
            />
        </VBox>

    </center>

</BorderPane>
