<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ServerGUIController"
            prefHeight="400.0" prefWidth="600.0">


    <top>
        <HBox fx:id="top" spacing="10" alignment="CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            <Button fx:id="startServer" text="Server Started" disable="true" prefWidth="150" prefHeight="50" maxWidth="300" maxHeight="100" HBox.hgrow="ALWAYS"/>         <!--onAction="#startServerMethod"-->
            <TextField fx:id="numClients" text="0 Players" alignment="CENTER" editable="false" prefWidth="150" prefHeight="50" maxWidth="300" maxHeight="100" HBox.hgrow="ALWAYS"/>      <!-- dynamic textbox that updates with players join/leave-->
            <Button fx:id="endServer" text="End Server" onAction="#endServerMethod" prefWidth="150" prefHeight="50" maxWidth="300" maxHeight="100" HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <center>
        <HBox fx:id="middle" spacing="10" alignment="CENTER">
            <VBox alignment="CENTER" spacing="0">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
    <!--            <TextField fx:id="gameLogs" promptText="Game Logs" editable="false" alignment="CENTER" prefWidth="300" prefHeight="100" maxWidth="930" maxHeight="200" HBox.hgrow="ALWAYS"/>-->
                <TextField fx:id="gameLogs" promptText="Game Logs" editable="false" alignment="TOP_CENTER" prefWidth="930" prefHeight="300" VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>
    </center>

    <bottom >
        <HBox fx:id="bottom" spacing="10" alignment="CENTER">
            <VBox alignment="CENTER" spacing="0">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
    <!--            <TextField fx:id="serverLogs" promptText="Server Logs" editable="false" alignment="CENTER" prefWidth="300" prefHeight="100" maxWidth="930" maxHeight="200" HBox.hgrow="ALWAYS"/>-->
                <TextField fx:id="serverLogs" promptText="Server Logs" editable="false" alignment="TOP_CENTER" prefWidth="930" prefHeight="300" />
            </VBox>
        </HBox>
    </bottom>


</BorderPane>